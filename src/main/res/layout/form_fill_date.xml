<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ntxdev="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#fff">

    <com.lfdb.parapesquisa.ui.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lipsum"
            android:id="@+id/form_input_label"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="false"
        android:layout_marginTop="11dp"
            android:textSize="16dp"
            android:textColor="#000"
        ntxdev:font_weight="300"
        android:layout_toRightOf="@+id/form_input_number" />

    <EditText
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:id="@+id/form_input_day"
            android:layout_below="@+id/form_input_label"
            android:layout_alignLeft="@+id/form_input_label"
            android:background="#f7f7f7"
            android:paddingLeft="16dp"
            android:layout_marginTop="6dp"
            android:editable="false"
            android:enabled="true"
            android:inputType="number"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="#666"
            android:textSize="15dp"
            android:textCursorDrawable="@null"
            />

    <com.lfdb.parapesquisa.ui.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="/"
            android:background="#fff"
            android:paddingLeft="5dp"
            android:paddingTop="9dp"
            android:editable="true"
            android:enabled="true"
            android:layout_alignTop="@+id/form_input_day"
            android:layout_toRightOf="@+id/form_input_day"
            android:paddingRight="5dp"
            android:id="@+id/textView2"
        />

    <EditText
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:id="@+id/form_input_month"
            android:background="#f7f7f7"
            android:paddingLeft="16dp"
            android:editable="false"
            android:enabled="true"
            android:layout_alignTop="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:textAlignment="center"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="15dp"
            android:textColor="#666"
            android:textCursorDrawable="@null"/>

    <com.lfdb.parapesquisa.ui.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="/"
            android:background="#fff"
            android:paddingLeft="5dp"
            android:paddingTop="9dp"
            android:editable="true"
            android:enabled="true"
            android:paddingRight="5dp"
            android:id="@+id/textView3"
            android:layout_alignTop="@+id/form_input_month"
            android:layout_toRightOf="@+id/form_input_month"/>

    <com.lfdb.parapesquisa.ui.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lipsum"
            android:id="@+id/form_input_hint"
            android:layout_alignLeft="@+id/form_input_day"
            android:layout_marginBottom="0dp"
            android:layout_alignParentBottom="false"
            android:textSize="12dp"
            android:textColor="#6d6767"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        ntxdev:font_weight="300"/>

    <com.lfdb.parapesquisa.ui.FontTextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:id="@+id/form_input_number"
            android:layout_alignTop="@+id/form_input_label"
            android:textColor="#666"
        android:textSize="16dp"
        ntxdev:font_weight="300"
        android:layout_marginRight="12dp"
        android:gravity="right" />

    <EditText
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:id="@+id/form_input_year"
            android:background="#f7f7f7"
            android:paddingLeft="16dp"
            android:editable="false"
            android:enabled="true"
            android:layout_alignTop="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#666"
            android:textSize="15dp"
            android:textCursorDrawable="@null"/>

    <com.lfdb.parapesquisa.ui.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_day"
            android:id="@+id/textView"
            android:textSize="12dp"
            android:textColor="#6d6767"
            android:layout_below="@+id/form_input_day"
            android:layout_alignLeft="@+id/form_input_day"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="2dp"/>

    <com.lfdb.parapesquisa.ui.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_month"
            android:id="@+id/textView4"
            android:textSize="12dp"
            android:textColor="#6d6767"
            android:layout_below="@+id/form_input_month"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="2dp"
            android:layout_alignLeft="@+id/form_input_month"/>

    <com.lfdb.parapesquisa.ui.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_year"
            android:id="@+id/textView5"
            android:textSize="12dp"
            android:textColor="#6d6767"
            android:layout_below="@+id/form_input_year"
            android:layout_alignLeft="@+id/form_input_year"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="17dp"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/form_input_day"
        android:layout_alignLeft="@+id/form_input_day"
        android:layout_alignRight="@+id/form_input_year"
        android:layout_alignBottom="@+id/textView"
        android:id="@+id/form_input_date_mask"></FrameLayout>

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:alpha=".5"
            android:id="@+id/form_input_disabledmask"
            android:visibility="gone"
            android:clickable="true"
        android:layout_alignBottom="@+id/form_input_hint"
        android:layout_alignParentTop="true">
    </FrameLayout>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/form_input_baloon"
        android:layout_alignParentRight="true"
            android:layout_marginRight="26dp"
            android:src="@drawable/modorevisao_icon_comentar"
        android:scaleType="center"
        android:layout_centerVertical="true"
        android:padding="10dp" />

</RelativeLayout>